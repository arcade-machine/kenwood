.info
  padding 20px

.info__items-list
  padding 0
  margin 0
  list-style none

.info__differences-about
  font-family "Montserrat Regular", serif, Arial
  font-size 15px
  color #555555
  display flex

.info__slider
  display none

.info__checkbox
  width 15px
  height 15px
  margin-right 15px
  border 1px solid #c4c4c4
  border-radius 2px
  box-sizing border-box
  position relative

#differences:checked ~ .info__checkbox::after
  content ""
  width 15px
  height 15px
  position absolute
  top -1px
  left -1px
  background-image url("../img/icons/check.svg")
  background-size cover

@media (min-width: $tablet)
  .info
    width 100%
    max-width 1170px
    padding 0 2%
    margin 0 auto
    box-sizing border-box

  .info__items-list
    padding-top 30px
    display flex
    justify-content space-between

  .info__slider
    width 100%
    height 10px
    margin-bottom 50px
    background-color #e4e4e4
    display block
    position relative

    &::before
      content ""
      width 50%
      max-width 500px
      border-radius 3px
      height 10px
      background-color #7c2582
      position absolute
      left 0
      top 0
      cursor pointer

  .info__differences-about
    margin-bottom 25px

@media (min-width: $desktop)
  .info
    padding 0