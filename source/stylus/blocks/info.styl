.info
  padding 20px

.info__items-list
  padding 0
  margin 0
  margin-bottom 74px
  list-style none

.info__differences-about
  font-family "Montserrat Regular", serif, Arial
  font-size 15px
  color $dark
  display flex

.info__slider
  display none

.info__checkbox
  width 15px
  height 15px
  margin-right 10px
  border 1px solid $grey2
  border-radius 2px
  box-sizing border-box
  position relative

#differences:checked ~ .info__checkbox::after
  content ""
  width 15px
  height 15px
  position absolute
  top -1px
  left -1px
  background-image url("../img/icons/check.svg")
  background-size cover

@media (min-width: $tablet)
  .info
    width 100%
    max-width 1170px
    padding 0 2%
    margin 0 auto
    box-sizing border-box

  .info__wrapper
    padding-top 70px
    margin-bottom 54px
    overflow-x scroll

    &::-webkit-scrollbar
      height 10px
      background-color $grey
      cursor pointer

    &::-webkit-scrollbar-thumb
      height 10px
      border-radius 5px
      background-color $purple

  .info__items-list
    width 150%
    margin-bottom 34px
    display flex

  .info__differences-about
    margin-bottom 25px

@media (min-width: $desktop)
  .info
    padding 0