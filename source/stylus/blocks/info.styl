.info
  padding 20px

.info__items-list
  padding 0
  margin 0
  list-style none

.info__differences-about
  font-family "Montserrat Regular", serif, Arial
  font-size 15px
  color #555555
  display flex

.info__checkbox
  width 15px
  height 15px
  margin-right 15px
  border 1px solid #c4c4c4
  border-radius 2px
  box-sizing border-box
  position relative

#differences:checked ~ .info__checkbox::after
  content ""
  width 15px
  height 15px
  position absolute
  top -1px
  left -1px
  background-image url("../img/icons/check.svg")
  background-size cover
