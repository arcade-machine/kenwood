.page-content
  padding-bottom 20px

.page-content__breadcrumbs
  display none

.page-content__header
  padding 32px 0 15px
  border-top 1px solid $grey3
  border-bottom 1px solid $grey3

.page-content__heading
  padding 0
  margin 0
  margin-bottom 30px
  font-family "Merriweather Regular", sans-serif, "Times New Roman"
  font-size 24px
  font-weight 400
  color $dark
  text-align center

.page-content__sorting-list
  padding 0
  padding-left 6%
  margin 0
  display flex
  list-style none

.page-content__sorting-item
  margin-right 6%

  &:last-child
    margin-right 0

.page-content__sorting-filter
  padding 0
  margin 0
  font-family "Montserrat SemiBold", serif, Arial
  font-size 13px
  font-weight 400
  color $dark
  text-decoration none

  &--current
    font-family "Montserrat Bold", serif, Arial
    color $black

.page-content__delete
  width 62%
  min-height 40px
  padding 0
  margin 0 auto
  margin-bottom 50px
  font-family "Montserrat SemiBold", serif, Arial
  font-size 13px
  font-weight 400
  text-align center
  text-decoration none
  text-transform uppercase
  color $purple
  background-color transparent
  display block
  border 1px solid $purple
  border-radius 20px
  cursor pointer

@media (min-width: $tablet)
  .page-content__header
    padding 17px 0 15px

  .page-content__breadcrumbs
    padding 0
    margin 0
    margin-bottom 38px
    display flex
    align-items center
    list-style none

  .page-content__breadcrumbs-item
    padding-right 20px
    margin-right 10px
    position relative

    &::before
      content ""
      width 10px
      height 1px
      position absolute
      top 10px
      right 0
      background-color $black

    &:last-child::before
      display none


  .page-content__sorting-list
    padding-left 0

  .page-content__breadcrumbs-link
    font-family "Montserrat Regular", serif, Arial
    font-size 13px
    font-weight 600
    color $black
    text-decoration none

    &--current
      padding 0
      margin 0
      color $dark

  .page-content__top-wrapper
    width 100%
    max-width 1170px
    padding 0 2%
    margin 0 auto
    box-sizing border-box

  .page-content__heading
    margin-bottom 47px
    font-size 34px
    text-align left

  .page-content__sorting-filter
    font-size 15px

  .page-content__delete
    width 220px
    margin 0
    margin-bottom 67px
    font-size: 15px;

  .page-content__bottom-wrapper
    width 100%
    max-width 1170px
    padding 0 2%
    padding-top 12px
    margin 0 auto
    box-sizing border-box

@media (min-width: $desktop)
  .page-content__sorting-item
    margin-right 56px

  .page-content__top-wrapper
    padding 0

  .page-content__bottom-wrapper
    padding 0
    padding-top 12px