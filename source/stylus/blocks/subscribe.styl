.subscribe
  width 87%
  margin 0 auto

.subscribe__heading
  padding 0
  margin 0
  margin-bottom 20px
  font-family "Merriweather Regular", sans-serif, "Times New Roman"
  font-size 17px
  font-weight 400
  color #0a0a0a
  text-align center

.subscribe__wrapper
  width 100%
  position relative

.subscribe__email
  width 100%
  min-height 40px
  padding 0 13px
  border 1px solid #c4c4c4
  border-radius 5px
  box-sizing border-box
  font-family "Montserrat Regular", serif, Arial
  font-size 13px
  font-weight 400
  color #0a0a0a

  &:placeholder
    color #999999

.subscribe__button
  width 40px
  height 40px
  padding 0
  border-radius 50%
  border none
  background-color #7c2582
  background-image url("../img/icons/button-icon.png")
  background-repeat no-repeat
  background-position 50% 50%
  position absolute
  top 0
  right -15px
  cursor pointer
  text-align left
  white-space nowrap
  overflow hidden
  text-indent -9999px

@media (min-width: $tablet)
  .subscribe
    width 100%
    max-width 1170px
    padding 0 2%
    margin 0 auto
    box-sizing border-box
    display flex
    align-items center
    justify-content space-between

  .subscribe__heading
    margin 0
    font-size 19px

  .subscribe__form
    width 49%

  .subscribe__wrapper
    width 100%
    display flex

  .subscribe__email
    width 49%
    margin-right 20px
    flex-grow 1

  .subscribe__button
    width 49%
    max-width 180px
    border-radius 20px
    background-image none
    position relative
    top auto
    right auto
    font-family "Montserrat SemiBold", serif, Arial
    font-size 15px
    color #ffffff
    text-transform uppercase
    text-align center
    white-space normal
    overflow auto
    text-indent 0

@media (min-width: $desktop)
  .subscribe
    padding 0