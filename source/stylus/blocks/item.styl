.item__top-wrapper
  width 80%
  padding-bottom 17px
  margin 0 auto
  display flex
  flex-direction column
  justify-content center
  align-items center

.item__bottom-wrapper
  width 95%
  margin 0 auto
  display flex
  justify-content space-between
  align-items center

.item__image
  margin-bottom 27px

.item__heading
  padding 0
  margin 0
  margin-bottom 8px
  font-family "Merriweather Regular", sans-serif, "Times New Roman"
  font-size 15px
  line-height 24px
  font-weight 400
  color $black
  text-align center

.item__price
  padding 0
  margin 0
  font-family "Montserrat SemiBold", serif, Arial
  font-size 17px
  font-weight 400
  color $dark2

.item__cart
  width 47%
  min-height 35px
  border none
  border-radius 17.5px
  background-color $purple
  font-family "Montserrat SemiBold", serif, Arial
  font-size 13px
  font-weight 400
  text-transform uppercase
  color #ffffff

.item__link
  width 47%
  font-family "Montserrat SemiBold", serif, Arial
  font-size 13px
  font-weight 400
  text-transform uppercase
  text-align center
  color $purple

@media (min-width: $tablet)
  .item
    width 24%
    margin-right 1%
    display block

    &:last-child
      margin-right 0

  .item__image
    max-width 100%

  .item__bottom-wrapper
    display none

  .item__heading
    font-size 17px
    line-height 24px

  .item__top-wrapper
    width 100%

  .item__bottom-wrapper
    width 100%