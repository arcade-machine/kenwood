.item__top-wrapper
  width 80%
  padding-bottom 20px
  margin 0 auto
  display flex
  flex-direction column
  justify-content center
  align-items center

.item__bottom-wrapper
  width 95%
  margin 0 auto
  display flex
  justify-content space-between
  align-items center

.item__image
  margin-bottom 20px

.item__heading
  padding 0
  margin 0
  margin-bottom 15px
  font-family "Merriweather Regular", sans-serif, "Times New Roman"
  font-size 15px
  font-weight 400
  color #0a0a0a
  text-align center

.item__price
  padding 0
  margin 0
  font-family "Montserrat SemiBold", serif, Arial
  font-size 14px
  font-weight 400
  color #444444

.item__cart
  width 47%
  min-height 35px
  border none
  border-radius 17.5px
  background-color #7c2582
  font-family "Montserrat SemiBold", serif, Arial
  font-size 13px
  font-weight 400
  text-transform uppercase
  color #ffffff

.item__link
  width 47%
  font-family "Montserrat SemiBold", serif, Arial
  font-size 13px
  font-weight 400
  text-transform uppercase
  text-align center
  color #7c2582

@media (min-width: $tablet)
  .item
    width 24%

  .item__image
    max-width 100%

  .item__bottom-wrapper
    display none